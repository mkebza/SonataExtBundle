{% extends '@Email/layout.mjml.twig' %}

{% block body %}
    <mj-text>
        <h1>Hi,</h1>
        <p>
            You recently requested to reset your password for your <strong>{{ config.app.name }}</strong> account.
            Use the button below to reset it. <strong>This password reset is only valid until {{ request.expire|date }}.</strong>
        </p>
    </mj-text>
    <mj-button href="{{ url('admin_reset_password', {'token': request.token}) }}">
        Reset your password
    </mj-button>
    <mj-text>
        <p>
            For security, this request was received from IP address {{ request.ip }} with device using {{ request.browser }}. If you did not request a password reset, please ignore this email or contact support if you have questions.
        </p>
        <p>
            Thanks, <br>
            The <strong>{{ config.app.name }}</strong> Team
        </p>
    </mj-text>
{% endblock %}