{% extends "@SonataAdmin/standard_layout.html.twig" %}

{% block body_attributes %}class="sonata-bc login-page"{% endblock %}
{% block sonata_header %}{% endblock %}
{% trans_default_domain 'unud' %}

{% block sonata_wrapper %}
    <div class="login-box">
        <div class="login-logo">
            <a href="{{ path('fos_user_security_login') }}">
                <img src="{{ asset('assets/image/logo.png') }}" alt="">
            </a>
        </div>

        {% block layout_open %}
            <div class="login-box-body">
                {#{% if error %}#}
                {#<div class="alert alert-danger alert-error">{{ error.messageKey }}</div>#}
                {#{% endif %}#}

                {% include 'backend/sonata/flashbag.html.twig' %}


                {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                    <div class="text-center" style="margin-bottom: 10px;">
                        {{ 'layout.logged_in_as'|trans({'%username%': app.user.username}, 'FOSUserBundle') }}
                    </div>

                    <div class="text-center">
                        <a class="btn btn-default btn-sm" href="{{ path('fos_user_security_logout') }}">
                            {{ 'layout.logout'|trans({}, 'FOSUserBundle') }}
                        </a>
                        <a class="btn btn-primary btn-sm" href="{{ path('sonata_admin_dashboard') }}">
                            Continue
                        </a>
                    </div>
                    <hr>
                {% endif %}

                {% if app.request.hasPreviousSession %}
                    {% for type, messages in app.session.flashbag.all() %}
                        {% for message in messages %}
                            <div class="flash-{{ type }}">
                                {{ message }}
                            </div>
                        {% endfor %}
                    {% endfor %}
                {% endif %}

                <div>
                    {% block fos_user_content %}{% endblock fos_user_content %}
                </div>
            </div>
        {% endblock %}
    </div>
{% endblock sonata_wrapper %}