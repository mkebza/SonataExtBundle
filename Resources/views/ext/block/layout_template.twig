<div class="{{ _block.block_size }}">
    <div class="box box-{{ _block.block_type }}">
        {% if block('header') is defined or block('header_title') is defined %}
            <div class="box-header">
                {% if block('header') is defined %}
                    {{ block('header') }}
                {% else %}
                    <h4 class="box-title">{{ block('header_title') }}</h4>
                {% endif %}
            </div>
        {% endif %}

        {% if block('body') is defined %}
            <div class="box-body">
                {{ block('body')}}
            </div>
        {% endif %}

        {% if block('footer') is defined %}
            <div class="box-footer">
                {{ block('footer') }}
            </div>
        {% endif %}
    </div>
</div>